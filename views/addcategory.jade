extends layout

block content
    h1=title
    ul.errors
        if errors
            each error, in i errors
                li.alert.alert-danger #{error.msg}

    form(method="post", action="/categories/add")
        .form-group
            label Title:
            input.form-control(name="name", placeholder="Category Name", type="text")
        input.btn.btn-default(type="submit", name="submit", value="Save")
                
            